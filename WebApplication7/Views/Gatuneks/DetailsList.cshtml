@model IEnumerable<WebApplication7.Models.Film>

@{
    ViewData["Title"] = "Details";
}


<h1>Details</h1>

<div>
    <h4>Gatunek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().Gatunek.Name)
        </dd>
    </dl>
</div>
<div>
    @{
        if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
        {
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.First().GatunekId">Edytuj</a>
        }
    }
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
<p></p>
<h4> Lista filmów</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Tytul
            </th>
            <th>
                Data
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tytul)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>

            </tr>
        }
    </tbody>
</table>