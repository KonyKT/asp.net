@model WebApplication7.Models.Gatunek

@{
    ViewData["Title"] = "";
}

<h1>Details</h1>

<div>
    <h4>Gatunek</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
