@model IEnumerable<WebApplication7.Models.Film>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Details";
}


<h1>Details</h1>

<div>
    <h4>Gatunek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().Gatunek.Name)
        </dd>
    </dl>
</div>
<div>
    @{
        if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
        {
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.First().GatunekId">Edytuj</a>
        }
    }
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
<p></p>
@Html.Partial("_TableView", Model)
	